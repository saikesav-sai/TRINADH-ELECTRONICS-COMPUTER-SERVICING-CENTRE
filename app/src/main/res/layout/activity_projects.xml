<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PROJECTS">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="800dp"
            android:background="@drawable/projects"

            />





        <EditText
            android:id="@+id/CustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"

            android:hint="Customer Name"
         android:layout_marginLeft="150dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="300dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:singleLine="true"

            android:layout_below="@id/CustomerName"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="0dp"
            android:padding="10dp"/>


        <EditText
            android:id="@+id/project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Project Summary"
            android:singleLine="true"

            android:layout_below="@id/date"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="0dp"
            android:padding="10dp"/>


        <EditText
            android:id="@+id/Amount"
            android:singleLine="true"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estimated Amount"
            android:layout_below="@id/project"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:padding="10dp"/>





        <TextView
            android:id="@+id/Estimated_amount"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="470dp"
            android:layout_marginRight="10dp"
            android:text="Estimated Amount"
            android:textSize="20dp"
            />


        <TextView
            android:id="@+id/project_summary"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="400dp"
            android:layout_marginRight="10dp"
            android:text="Project Summary"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/workorder"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="550dp"
            android:layout_marginRight="10dp"
            android:text="Project Work Order"
            android:textSize="20dp"
            />




        <EditText
            android:id="@+id/order"
            android:singleLine="true"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Project Work Order"
            android:layout_below="@id/Amount"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="640dp"
            android:layout_marginRight="10dp"
            android:text="Working Status"
            android:textSize="20dp"
            />




        <EditText
            android:id="@+id/workingstatus"
            android:singleLine="true"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Working Status"
            android:layout_below="@id/order"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:padding="10dp"/>


        <TextView
            android:id="@+id/material"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="698dp"
            android:layout_marginRight="10dp"
            android:text="Material"
            android:textSize="20dp"
            />




        <EditText
            android:id="@+id/material0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Material"
            android:singleLine="true"

            android:layout_below="@id/workingstatus"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="0dp"
            android:padding="10dp"/>


        <TextView
            android:id="@+id/compele"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="750dp"
            android:layout_marginRight="10dp"
            android:text="Compeleted"
            android:textSize="19dp"
            />




        <EditText
            android:id="@+id/compeleted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Compeleted"
            android:singleLine="true"

            android:layout_below="@id/material0"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/remarks"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="790dp"
            android:layout_marginRight="10dp"
            android:text="Remarks"
            android:textSize="20dp"
            />




        <EditText
            android:id="@+id/Remarks2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Remarks"
            android:singleLine="true"

            android:layout_below="@id/compeleted"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="0dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="300dp"
            android:layout_marginRight="10dp"
            android:text="Customer name"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="360dp"
            android:layout_marginRight="10dp"
            android:text="Date"
            android:textSize="20dp"


            />

        <Button
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="submit"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="980dp"
            android:layout_marginLeft="100dp"

            />





    </RelativeLayout>
</ScrollView>